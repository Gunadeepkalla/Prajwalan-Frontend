# ─────────────────────────────────────────────────────────────
# Prajwalan – Root .env.example
# Copy this file to backend/backend/.env and fill in real values
# ─────────────────────────────────────────────────────────────

# ── Database ──────────────────────────────────────────────────
DATABASE_URL="postgresql://postgres:password@localhost:5432/reva_ai_db?schema=public"

# ── JWT ───────────────────────────────────────────────────────
JWT_ACCESS_SECRET="your-super-secret-access-token-key-min-32-chars"
JWT_REFRESH_SECRET="your-super-secret-refresh-token-key-min-32-chars"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# ── Server ────────────────────────────────────────────────────
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ── Redis (BullMQ) ────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379

# ── Azure AI Services ─────────────────────────────────────────
AZURE_OPENAI_ENDPOINT="https://lakshman.openai.azure.com/"
AZURE_OPENAI_KEY="your-azure-openai-key"
AZURE_OPENAI_DEPLOYMENT="sih-vision"
AZURE_OPENAI_API_VERSION="2024-12-01-preview"

AZURE_SPEECH_KEY="your-azure-speech-key"
AZURE_SPEECH_REGION="eastus2"
AZURE_STT_ENDPOINT="https://eastus2.stt.speech.microsoft.com"
AZURE_TTS_ENDPOINT="https://eastus2.tts.speech.microsoft.com"

# ── IDfy OTP ─────────────────────────────────────────────────
IDFY_API_KEY="your-idfy-api-key"
IDFY_BASE_URL="https://api.idfy.com"

# ── File Storage (S3-compatible) ──────────────────────────────
S3_BUCKET="reva-ai-evidence"
S3_ACCESS_KEY="your-s3-access-key"
S3_SECRET_KEY="your-s3-secret-key"
S3_ENDPOINT="https://s3.amazonaws.com"
S3_REGION="ap-south-1"

# ── Encryption ────────────────────────────────────────────────
ENCRYPTION_KEY="your-32-char-encryption-key-here!!"

# ── Rate Limiting ─────────────────────────────────────────────
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
